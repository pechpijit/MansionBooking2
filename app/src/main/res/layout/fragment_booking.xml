<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474f"
    tools:context="dev.pechy.mansionbooking.fragment.BookingFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="4dp"
          android:text="รายละเอียดห้องพัก"
          android:textColor="@color/white"
          android:textSize="18dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/txtCode"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:text="หมายเลขห้อง : 101"
          android:textColor="@color/white"
          android:textSize="18dp" />

      <TextView
          android:id="@+id/txtName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:text="ชื่อห้อง : 101"
          android:textColor="@color/white"
          android:textSize="18dp" />

      <TextView
          android:id="@+id/txtCat"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:text="ประเภทห้องพัก : ห้องธรรมดา"
          android:textColor="@color/white"
          android:textSize="18dp" />

      <TextView
          android:id="@+id/txtMoney"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:text="ราคาห้องพักรายเดือน : 4000 บาท"
          android:textColor="@color/white"
          android:textSize="18dp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <android.support.v7.widget.AppCompatButton
              android:id="@+id/btnCancel"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@color/orange"
              android:layout_gravity="center"
              android:padding="16dp"
              android:layout_marginLeft="4dp"
              android:layout_marginRight="2dp"
              android:text="ยกเลิกการจอง"
              android:textColor="#FFF"
              android:textStyle="bold"/>

          <android.support.v7.widget.AppCompatButton
              android:id="@+id/btnPay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@color/green"
              android:layout_gravity="center"
              android:padding="16dp"
              android:enabled="false"
              android:layout_marginLeft="2dp"
              android:layout_marginRight="4dp"
              android:layout_margin="4dp"
              android:text="ส่งรูปสลิปชำระเงิน"
              android:textColor="#FFF"
              android:textStyle="bold"/>
      </LinearLayout>
  </LinearLayout>

</FrameLayout>
