<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.pechy.mansionbooking">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".EmailSignInActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".EmailSignUpActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.TransNav" />
        <activity
            android:name=".DetailApartActivity"
            android:label="@string/title_activity_detail_apart"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AllRoomActivity"
            android:label="@string/title_activity_booking_room"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:label="ประวัติส่วนตัว"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AccountSettingActivity"
            android:label="ข้อมูลโปรไฟล์"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".DetailRoomActivity"
            android:label="@string/title_activity_detail_room"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListBookingRoomActivity"
            android:label="หอพัก" />
        <activity
            android:name=".UpdateImageActivity"
            android:label="หอพัก" />
        <activity
            android:name=".DetailRoomAndBookingActivity"
            android:label="@string/title_activity_detail_room_and_booking"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginRoomActivity"
            android:label="@string/title_activity_login_room"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>